#include "Global.h"
#include <stdio.h>

int main_menu()
{
    printf("Please pick a choice: \n");
    printf("0. Quit\n1. Play Game\n");

    int choice;
    scanf("%d", &choice);

    switch (choice)
    {
    case 0:
        printf("Thanks for playing\n");
        return 0;
    case 1:
        printf("You're playing\n");
        return 0;
    default:
        printf("Invalid choice\n");
        return 1;
    }
}

int main()
{
    main_menu();
    return 0;
}
